{
  "name": "the-watchlist",
  "version": "1.0.0",
  "description": "A Movie & TV Show Recommendation App with TMDB API integration",
  "main": "server/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sharmaram25/the-watchlist.git"
  },
  "homepage": "https://github.com/sharmaram25/the-watchlist#readme",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && node server.js",
    "client": "cd client && npm start",
